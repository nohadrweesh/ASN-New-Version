<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        android:padding="8dp">



        <TextView

            android:id="@+id/textmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"

            />



        <TextView
            android:id="@+id/textprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textmodel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"

            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textownername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textprice"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"


            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/textownerphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textownername"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"


            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnsell"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textownerphone"
            android:layout_alignLeft="@+id/btndetails"
            android:layout_alignStart="@+id/btndetails"
            android:text="Buy"/>

        <Button
            android:id="@+id/btndetails"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textmodel"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="12dp"
            android:text="View"/>

        <Button
            android:id="@+id/btncall"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
            android:layout_marginTop="130dp"
            android:text="Call"/>



    </RelativeLayout>



</LinearLayout>
