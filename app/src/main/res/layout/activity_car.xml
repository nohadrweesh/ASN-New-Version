<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context="com.example.a.myapplication.SignUP2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/cars2" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_alignParentTop="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="197dp"
                android:layout_height="197dp"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:textColor="#424242"
                android:textSize="23sp"
                android:fontFamily="@font/strslml"
                android:text="Sign Up"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/editTextUsernameid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#11000000"
            android:ems="10"
            android:hint="Car Model"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/editeTextEmailid"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/editTextUsernameid"
            android:layout_alignStart="@+id/editTextUsernameid"
            android:layout_below="@+id/editTextUsernameid"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:ems="10"
            android:hint="Car Serial"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress" />


        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/editeTextEmailid"
            android:layout_alignStart="@+id/editeTextEmailid"
            android:layout_below="@+id/editeTextEmailid"
            android:layout_marginTop="61dp"
            android:background="#80424242"
            android:fontFamily="@font/strslml"
            android:text="Sign UP"
            android:textAllCaps="false"
            android:textSize="20dp"/>

    </RelativeLayout>


</ScrollView>
