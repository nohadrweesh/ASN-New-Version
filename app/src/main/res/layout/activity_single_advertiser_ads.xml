<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleAdvertiserAdsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ownerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textScaleX="1.5"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/aboutOwnerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="aboutOwnerBtnOnClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More About "
                android:textScaleX="0.8"
                android:textStyle="italic"
                android:textColor="#00009F"/>
            <TextView
                android:id="@+id/aboutOwnerBtnOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textScaleX="0.8"
                android:textStyle="italic"
                android:textColor="#00009F"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>